.An
    width 100px
    height 100px
    background #f0f0f0
    position relative
    overflow hidden
    div
        width 100px
        height 100px

.An-mask
    background #ccc
    line-height 100px
    text-align center
    position absolute
    top 0

.animated
    transition all 300ms
    -webkit-transition all 300ms
.enter-true
    transform translateY(0%)
.enter-false
    transform translateY(-100%)
